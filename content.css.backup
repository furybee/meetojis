.meetojis-btn {
  background: white;
  border: none;
  border-radius: 50%;
  color: white;
  cursor: pointer;
  font-size: 16px;
  height: 50px;
  width: 50px;
  margin-right: 4px;
  display: inline-flex;
  align-items: start;
  justify-content: center;
  transition: background-color 0.2s;
  flex-shrink: 0;
  align-self: center;
  vertical-align: middle;
}

.meetojis-btn:hover {
  background: #f0f1f1;
}

.meetojis-picker {
  position: fixed;
  bottom: 80px;
  right: 20px;
  background: white;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  box-shadow: 0 4px 16px rgba(0,0,0,0.1);
  padding: 12px;
  max-width: 400px;
  max-height: 350px;
  z-index: 10000;
  display: flex;
  flex-direction: column;
}

.meetojis-search {
  width: 100%;
  padding: 8px 12px;
  border: 1px solid #e0e0e0;
  border-radius: 20px;
  font-size: 14px;
  margin-bottom: 12px;
  outline: none;
  box-sizing: border-box;
}

.meetojis-search:focus {
  border-color: #1a73e8;
  box-shadow: 0 0 0 2px rgba(26, 115, 232, 0.2);
}

.meetojis-emoji-container {
  display: grid;
  grid-template-columns: repeat(10, 1fr);
  gap: 4px;
  overflow-y: auto;
  flex: 1;
}

.meetojis-emoji-btn {
  background: none;
  border: none;
  cursor: pointer;
  font-size: 20px;
  height: 32px;
  width: 32px;
  border-radius: 4px;
  display: flex;
  align-items: start;
  justify-content: center;
  transition: background-color 0.2s;
}

.meetojis-emoji-btn:hover {
  background: #f5f5f5;
}
