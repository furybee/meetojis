{
  "manifest_version": 3,
  "name": "Meetojis",
  "version": "1.0.0",
  "description": "Send emojis in Google Meet Messages area",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://meet.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Meetojis - Send emojis in Google Meet"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://meet.google.com/*"]
    }
  ]
}